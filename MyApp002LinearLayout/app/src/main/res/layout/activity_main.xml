<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Výpočet průhybu a ohybového momentu prostého nosníku s osamělým břemenem uprostřed rozpětí"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textStyle="bold"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delka nosníku (L) v metrech:"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/inputLength"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="Zadejte délku nosníku"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zatížení (P) v N:"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/inputLoad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="Zadejte zatížení"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modul pružnosti (E) v Pa:"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/inputElasticity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="Zadejte modul pružnosti"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Šířka průřezu (b) v metrech:"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/inputWidth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="Zadejte šířku průřezu"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Výška průřezu (h) v metrech:"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/inputHeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="Zadejte výšku průřezu"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/resultText"
            android:layout_width="194dp"
            android:layout_height="180dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="20dp"
            android:text="Výsledky: "
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/calculateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:text="Vypočítat"
            android:textSize="16sp" />


    </LinearLayout>

</LinearLayout>
