<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B22222">

    <ImageView
        android:id="@+id/decorImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/christmas_tree"
        android:layout_gravity="top|center_horizontal" />

    <FrameLayout
        android:id="@+id/snowContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/generateGiftButton"
            style="@style/VanoceButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generuj dárek"
            android:textColor="@color/accent_green"/>

        <Button
            android:id="@+id/snowButton"
            style="@style/VanoceButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Přepínej počasí"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/increaseSpeedButton"
            style="@style/VanoceButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zrychli sněžení"
            android:textColor="#000000" />

        <Button
            android:id="@+id/decreaseSpeedButton"
            style="@style/VanoceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zpomal sněžení"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/btnExit"
            style="@style/VanoceButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ukonči vánoce"
            android:textColor="@color/background_red" />
    </LinearLayout>

</FrameLayout>
